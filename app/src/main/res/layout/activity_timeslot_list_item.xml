<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/timeslot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/timeslot_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/timeslot_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/timeslot_time"
        android:layout_toLeftOf="@id/timeslot_time"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/timeslot_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/timeslot_location"
        android:layout_toLeftOf="@id/timeslot_location"
        android:padding="5dp"
        />



</RelativeLayout>
